@model IEnumerable<Model_Library.Models.UserModel>
@using Model_Library.Resources;

<head>
    @Styles.Render("~/Content/Login")


</head>

    <section class="u-clearfix u-grey-5 u-section-1" id="sec-fe7c">
        <h2 class="u-align-center u-clearfix u-container-align-center">@Resource.WelcomeMessage</h2>
        <div class="u-clearfix u-sheet u-sheet-1">
            <div class="u-form u-form-1">
                <form method="post" action="/User/Login" style="padding: 25px;">
                    <div class="u-form-group u-form-name u-label-top">
                        <label for="name-3b9a" class="u-label">@Resource.Email *</label>
                        <input type="email" placeholder="@Resource.Enter_Email" id="name-3b9a" name="Email" class="u-input u-input-rectangle u-radius-15" />
                    </div>
                    <div class="u-form-group u-form-name u-label-top">
                        <label for="email-3b9a" class="u-label">@Resource.Password *</label>
                        <input type="password" placeholder="@Resource.Enter_Password" id="email-3b9a" name="Password" class="u-input u-input-rectangle u-radius-15" />
                    </div>
                    <div class="u-form-group u-label-top u-form-group-3">
                        <label for="text-53ce" class="u-label">@Resource.Verification_Code *</label><br>
                        @Html.TextBox("code", "",
                                new
                                {
                                    @class = "u-input u-input-rectangle u-radius-15",
                                    @placeholder = "请输入验证码",
                                    @datatype = "*",
                                    @nullmsg = "请输入验证码！",
                                    @maxlength = 4,
                                    @required = "required",
                                    @autocomplete = "off"
                                })
                        <div class="code-img">
                            <img id="imgVerify" src="~/User/ValidateCode" onclick="this.src = this.src + '?'" style="vertical-align:middle;" /><label for="text-53ce" class="u-label">@Resource.V_Click</label><br>
                        </div>
                    </div>
                    <div class="u-align-center u-form-group u-form-submit u-label-top">
                        <a href="#" class="u-border-none u-btn u-btn-submit u-button-style u-hover-grey-75 u-btn-2">
                            @Resource.LogIn<br>
                        </a>
                        <input type="submit" value="submit" class="u-form-control-hidden">
                    </div>
                </form>
            </div>
            <p class="u-text u-text-default u-text-3">
                <a class="u-active-none u-border-none u-btn u-button-link u-button-style u-hover-none u-none u-text-palette-1-base u-btn-3" href="/User/Register">@Resource.Dont_have_account</a>
            </p>
        </div>
    </section>

